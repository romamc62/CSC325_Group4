<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bloodpressuremonitor.group4.csc325_group4.view.ChartView"
            prefWidth="800.0" prefHeight="600.0">

    <children>
        <LineChart fx:id="bpLineChart" layoutX="20.0" layoutY="60.0" prefHeight="500.0" prefWidth="760.0">
            <xAxis>
                <CategoryAxis fx:id="xAxis" label="Timestamp"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Blood Pressure (mmHg)"/>
            </yAxis>
        </LineChart>

        <Button fx:id="backButton" text="← Back" layoutX="20.0" layoutY="15.0" onAction="#handleBackButton"/>
    </children>
</AnchorPane>
